<div class="homepage">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(74, 83, 88, 0.6) 0%, rgba(84, 94, 97, 0.16) 50%),  url('https://images.unsplash.com/photo-1453838956707-38a7aa3cd62d?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=a0ac54ba2fba94bebf0666add6da8fa8&auto=format&fit=crop&w=1950&q=80');">
    <div class="banner-content">
      <h1>Teach Me</h1>
      <p>Find your perfect lesson</p>
      <div class="form-inline">
      <%= form_tag lessons_path, method: :get do %>
      <%= text_field_tag :query, params[:query], size: 50, class: "form-control", placeholder: "Search by language or location!"%>
      <%= button_tag "Search", type: "submit", class: "btn btn-primary" %>
      </div>
      <!-- <input name='Serch' type='submit' value='Serch' data-confirm="Are you sraiure?" /> -->
      <% end %>
    </div>
  </div>
</div>

<div class="container" style= "margin-top: 5px">
  <div class="title" style= "text-align: center">
    <h2>Lesson Lists</h2>
  </div>
  <div class="all-lesson-lists">
    <div class="lesson-list">
      <% @lessons.each do |l| %>
        <div class="col-xs-12 col-sm-6 col-md-3" style= "margin: 10px 0px">
          <%= link_to lesson_path(l) do%>
            <div class="card"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path l.user.photo, width:400, height: 500, crop: :fill %>');">
            </div>
          <% end %>
          <div class="profile">
            <h3><%= l.user.first_name %> <%= l.user.last_name %></h3>
            <h4><%= l.language %>&nbsp;</h4>
            <h3><%= l.location %></h3>
            <p> <%= l.duration %><i class="far fa-clock"></i>  &nbsp;
            Â¥<%= l.price %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>



